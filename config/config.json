{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "read_timeout": "30s",
    "write_timeout": "30s"
  },
  "database": {
    "host": "localhost",
    "port": "5432",
    "user": "postgres",
    "name": "postgres",
