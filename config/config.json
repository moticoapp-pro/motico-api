    "default_limit": 20,
    "max_limit": 100
  },
  "validation": {
    "max_name_length": 255,
    "max_description_length": 1000
  },
  "logging": {
    "level": "info",
    "format": "json"
  },
  "jwt": {
    "expiration_time": "1h"
  }
}

